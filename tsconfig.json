{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,  // This enables JSON imports
    "baseUrl": ".",
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules"]
}